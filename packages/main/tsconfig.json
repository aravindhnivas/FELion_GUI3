{
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "sourceMap": false,
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "strict": true,
      "isolatedModules": true,
      "types" : ["node"],
      "baseUrl": ".",
      "paths": {
        "/@/*": [
          "./*"
        ]
      },
      "allowSyntheticDefaultImports": true,
    },
    "include": [
      "./*.ts",
      "../../types/**/*.d.ts"
, "../../types/main.ts"    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ]
  }